from docx import Document
def find_keyword_in_docx(file_path, keyword):
    # Open the Word document
    doc = Document(file_path)
    
    # Initialize a list to store occurrences
    occurrences = []
    
    # Iterate through each paragraph in the document
    for para in doc.paragraphs:
        # Check if the keyword is in the paragraph text
        if keyword in para.text:
            occurrences.append(para.text)
    
    return occurrences

# Specify the path to your Word file and the keyword to search for
file_path = 'path/to/your/document.docx'  # Change this to your file path
keyword = 'CTF'

# Find the occurrences of the keyword
results = find_keyword_in_docx(file_path, keyword)

# Print the results
if results:
    print(f'Occurrences of "{keyword}":')
    for result in results:
        print(result)
else:
    print(f'No occurrences of "{keyword}" found.')

